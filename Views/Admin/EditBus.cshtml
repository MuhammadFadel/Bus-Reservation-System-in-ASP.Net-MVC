@model OnlineBusReservationV6.Models.BusDriverView

@{
    ViewBag.Title = "Edit Bus";
}

<div class="container">
    <div class="row">
        <h2>Edit Bus</h2>

        <div class="col-md-6">

            @using (Html.BeginForm("EditBus", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Bus</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Bus.Id)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Bus.Color, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Bus.Color, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Bus.Color, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Bus.BusNumber, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Bus.BusNumber, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Bus.BusNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Bus.MaximumSeats, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Bus.MaximumSeats, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Bus.MaximumSeats, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Bus.DriverId, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(m=>m.Bus.DriverId, new SelectList(Model.Drivers, "Id", "Name"), "Select Driver", new { @class = "form-control" })                            
                            @Html.ValidationMessageFor(model => model.Bus.DriverId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Bus.BusPicture, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input type="file" name="BusPictureFile" />
                            @Html.ValidationMessageFor(model => model.Bus.BusPicture, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-info btn-block" required />
                            <div>
                                <br />
                                @Html.ActionLink("Back to Buses List", "Buses", null, new { @class = "btn btn-block btn-success" })
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="col-md-4 col-md-offset-2">
            <br /><br /><br />
            <img src="~/Uploads\@Model.Bus.BusPicture" title="@Model.Bus.BusNumber" class="img-responsive img-thumbnail" />
        </div>

    </div>
</div>