@model OnlineBusReservationV6.Models.BookingViewModel
@{
    ViewBag.Title = "Booking";
}


<div class="container">    
    <div class="row">
        <h2>Booking</h2>
        <div class="col-md-6">
            @using (Html.BeginForm("Booking", "Passengers", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Our Available Trips</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })                    

                    <div class="form-group">
                        <label class="control-label col-md-2" >Select Your Trip</label>
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.Trip, new SelectList(Model.Trips, "Id", "ToString"), "Select Your Trip", new { @class = "form-control", required=""})
                            @Html.ValidationMessageFor(model => model.Trip, "", new { @class = "text-danger" })
                        </div>
                    </div>                    
                    
                    <div class="form-group">
                        @Html.LabelFor(model => model.NumberOfChairs, new { @class="control-label col-md-2"})
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.NumberOfChairs, new { htmlAttributes = new { @class = "form-control", required = "", Minimum="0", Maximum="10"} })
                            @Html.ValidationMessageFor(model => model, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Booking" class="btn btn-info btn-block" required />
                            <div>
                                <br />
                                @Html.ActionLink("Back to Profile", "Index", null, new { @class = "btn btn-block btn-success" })
                            </div>
                        </div>
                    </div>

                </div>
            }
        </div>
        @*<br /><br />
        <div class="col-md-4 col-md-offset-1">
            <img src="~/Uploads/@Model." width="450px" height="400px" title="" />
        </div>*@
    </div>
</div>

